@page
@{
    Layout = null;
}

<html>
    <head>
        <style>
        ul {
            list-style-type: none; /* Remove bullets from the list */
            padding: 0;
        }

        .form-container input[type="text"],
        .form-container textarea {
            /* ... */
            max-width: 90%; /* Limit the width of the input field */
            box-sizing: border-box; /* Include padding and border in the total width */
        }

        /* ... */

        .form-container input[type="submit"] {
            background-color: #4CAF50; /* Change the button color to green */
        }
        body {
            background-color: #010e1a;
            margin: 0;
            padding: 0;
        }

        .container {
            text-align: center;
            padding: 20px;
            margin: 0 auto;
            max-width: 500px;
        }

        h1 {
            color: #ffffff;
            font-family: Arial, sans-serif;
        }

        .form-container {
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgb(255, 254, 254);
        }

            .form-container input[type="text"],
            .form-container textarea {
                width: 90%;
                padding: 10px;
                margin-bottom: 10px;
                border: 1px solid #ccc;
                border-radius: 5px;
            }

            .form-container input[type="button"] {
                background-color: #4CAF50;
                color: white;
                border: none;
                padding: 10px 20px;
                cursor: pointer;
                border-radius: 5px;
            }


        .message-container {
            max-height: 500px; /* Set the maximum height of the container */
            overflow-y: auto; /* Enable vertical scrolling when the messages exceed the height */
            padding: 5px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #ece6e6;
            margin-bottom: 10px;
            text-align: left; /* Align the text to the left */
            white-space: pre-wrap; /* Allow the text to wrap to the next line */
            word-wrap: break-word;
            display: flex; /* Add flex display */
            flex-direction: column; /* Set flex direction to column */
        }

            .message-container ul {
                margin-top: 0; /* Remove the default top margin of the unordered list */
                padding: 0; /* Remove any padding on the unordered list */
            }

            /* Optional: If you want to align the messages to the top-left */
            .message-container li {
                display: flex;
                align-items: flex-start;
            }
        
        </style>

    </head>
    <body>

        <div class="container">
        <br><br><br>
            <h1>Chat with Other Live Customers</h1>
            <div class="form-container">
                <form>

                <textarea id="messageInput" placeholder="Message" rows="4" required></textarea>
                <input type="button" id="sendButton" value="Send Message">
                <div class="row p-1">
                    <div class="col-6">
                        <hr />
                    </div>
                </div>
                <div class="row p-1">
                    <div class="col-6">
                        <div class="message-container">
                            <ul id="messagesList"></ul>
                        </div>
                    </div>
                </div>
                </form>
            </div>
        </div>

<script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>
</body>
</html>